<%= form_for(domain) do |f| %>
  <% if domain.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(domain.errors.count, "error") %> prohibited this domain from being saved:</h2>

      <ul>
      <% domain.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, :size=>"50" %>
  </div>

  <div class="field">
    <%= f.label :user_id %>
    <%= f.select :user_id, @users.collect { |p| [ p.name, p.id ] }, {:prompt => 'Select User'}, include_blank: true %>
  </div>
  <br/>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
